<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <!-- Favicons -->
    <link href="~/Content/home/assets/img/favicon.png" rel="icon">
    <link href="~/Content/home/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/home/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/home/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/Content/home/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/home/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/Content/home/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/home/assets/vendor/aos/aos.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/home/assets/css/style.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="header" class="fixed-top">
        <div class="container d-flex">

            <div class="logo mr-auto">
                <h1 class="text-light"><a href="index.html"><span>PACKNOVA</span></a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!--<a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li class="active"><a href="/">Inicio</a></li>
                    <li><a href="#services">Nuestras Empresas</a></li>
                    <li><a href="#about">¿Quiénes Somos?</a></li>
                    <li><a href='@Url.Action("Registrarse", "Home")'>Registrarse</a></li>
                </ul>
            </nav><!-- .nav-menu -->
        </div>
    </header><!-- End Header -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer">
            <div class="container">
                <div class="copyright">
                    &copy; Copyright <strong><span>PACKNOVA</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>
        </footer><!-- End Footer -->
        <a href="#" class="back-to-top"><i class="bx bxs-up-arrow-alt"></i></a>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Content/home/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/home/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/home/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/Content/home/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/home/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/home/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/Content/home/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/Content/home/assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/home/assets/js/main.js"></script>
</body>
</html>
