@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/login/login.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Register</title>
</head>
<body>
    <div class="container">
        <div class="register">
            <div class="row">
                <div class="col-md-3 register-left">
                    <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                    <h3>Iniciar Sesión</h3>
                    <hr style="background-color:white" />
                    <br />
                    <br />
                    <a href='@Url.Action("Index", "Home")' style="color:white">Menú Principal</a><br /><br />
                    <a href='@Url.Action("Registrarse", "Home")' style="color:white">Registrarse</a>
                </div>
                <div class="col-md-9 register-right">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h5 class="register-heading">Ingrese sus Crendeciales</h5>
                            <div class="row register-form justify-content-md-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="ID Institucional" value="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Contraseña" value="" />
                                    </div>

                                </div>
                                <button type="submit" class="btnLogin">Iniciar Sesión</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
</body>
</html>
